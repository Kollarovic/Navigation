{var $colors = ['aqua', 'green', 'yellow', 'red', 'blue', 'purple', 'teal', 'maroon', 'navy']}
{var $index=0}

<div class="row" n:inner-foreach="$items as $item">
	<div n:if="!$item->getResource() or $user->isAllowed($item->getResource())" class="col-lg-3 col-xs-6">
		{var $index = $index>8 ? 0 : $index}
		<div class="small-box bg-{$colors[$index++]}">
			<div class="inner">
				<h3>{$item->getValue()|noescape}&nbsp;</h3>
				<p>{_$item->getLabel()}</p>
			</div>
			<div class="icon">
				<i class="fa {$item->getIcon() ? $item->getIcon() : fa-file-text-o}"></i>
			</div>
			<a n:class="$ajax ? ajax,small-box-footer" href="{$item->isUrl() ? $item->getLink() : $presenter->link($item->getLink(), $item->getLinkArgs())}">
				{_'Show'} <i class="fa fa-arrow-circle-right"></i>
			</a>
		</div>
	</div>
</div>
